rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Password is stored in app_config/access.password and read by the app.
    match /app_config/access {
      allow read: if true;
      allow write: if false;
    }

    // Shared bank balance document.
    match /balances/shared {
      allow read: if true;

      allow create, update: if request.resource.data.keys().hasOnly(['balance', 'updatedAt', 'history'])
        && request.resource.data.balance is number;

      allow delete: if false;
    }

    // Deny all other docs by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
