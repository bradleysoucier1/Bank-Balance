rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isApproved(uid) {
      return exists(/databases/$(database)/documents/approved_users/$(uid))
        && get(/databases/$(database)/documents/approved_users/$(uid)).data.approved == true;
    }

    function requesterApproved() {
      return signedIn() && isApproved(request.auth.uid);
    }

    // Approval records are server-managed/admin-managed.
    // The client app only reads approval for the currently signed-in user.
    match /approved_users/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    // Shared single bank balance document for all approved users.
    match /balances/shared {
      allow read: if requesterApproved();

      // Create is used when the shared document is initialized.
      allow create: if requesterApproved()
        && request.resource.data.keys().hasOnly(['balance', 'updatedAt', 'history'])
        && request.resource.data.balance is number
        && request.resource.data.history is list;

      // Update allows atomic transforms used by the app:
      // - balance: increment(...)
      // - updatedAt: serverTimestamp()
      // - history: arrayUnion(...)
      allow update: if requesterApproved()
        && request.resource.data.keys().hasOnly(['balance', 'updatedAt', 'history'])
        && request.resource.data.balance is number;

      allow delete: if false;
    }

    // Deny access to any other balance docs.
    match /balances/{docId} {
      allow read, write: if false;
    }
  }
}
