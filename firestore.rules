rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isApproved(uid) {
      return exists(/databases/$(database)/documents/approved_users/$(uid))
        && get(/databases/$(database)/documents/approved_users/$(uid)).data.approved == true;
    }

    // Approval records are server-managed/admin-managed.
    // The client app only reads approval for the currently signed-in user.
    match /approved_users/{uid} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    // Per-user bank balance documents.
    match /balances/{uid} {
      allow read: if isOwner(uid) && isApproved(uid);

      allow create: if isOwner(uid)
        && isApproved(uid)
        && request.resource.data.keys().hasOnly(['balance', 'updatedAt', 'history'])
        && request.resource.data.balance is number
        && request.resource.data.history is list;

      allow update: if isOwner(uid)
        && isApproved(uid)
        && request.resource.data.keys().hasOnly(['balance', 'updatedAt', 'history'])
        && request.resource.data.balance is number
        && request.resource.data.history is list
        && (
          !('history' in resource.data)
          || request.resource.data.history.size() <= resource.data.history.size() + 1
        );

      allow delete: if false;
    }
  }
}
